{
  "configuration" : {
    "name": "test",
    "appenders": {
      "Console": {
        "name": "console",
        "target": "SYSTEM_OUT",
        "PatternLayout": {
          "pattern": "%-7r %date %level [%thread] %logger - %msg%n"
        }
      }
    },

    "loggers": {
      "root": {
        "level": "info",
        "appender-ref": {
          "ref": "console"
        }
      }
    }
  }
}